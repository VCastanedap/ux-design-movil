<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" /> <!-- ajusta el radio según desees -->
            <stroke
                android:width="2dp"
                android:color="@color/botones" /> <!-- ajusta el color del borde -->
            <solid android:color="@color/botones" /> <!-- ajusta el color del fondo -->
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="100dp" />
            <stroke
                android:width="2dp"
                android:color="@color/fondo" /> <!-- color del borde cuando el botón está deshabilitado -->
            <solid android:color="@color/fondo" /> <!-- color del fondo cuando el botón está deshabilitado -->
        </shape>
    </item>
</selector>
